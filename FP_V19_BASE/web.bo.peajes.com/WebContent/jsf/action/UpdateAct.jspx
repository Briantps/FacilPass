<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:a4j="http://richfaces.org/a4j">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8" />
		<script language="javascript" type="text/javascript" src="/web.bo.peajes.com/js/validation.js" defer="defer"></script>
	</head>	
	<body>
		<div class="container">
			<f:view>		
				<div>	
					<h:form id="Formulario">
						<f:loadBundle basename="staticText.messages" var="msg" />
						<rich:panel style="width:380px;">
							<table width="100%">
								<tr>
									<td width="10%"></td>
									<td width="30%">
										<h:outputText value="Nombre Acción: " styleClass="bold"/>
										<h:outputLabel value="#{msg.Asterisk}" styleClass="asteriskMandatoryField"/>
									</td>
									<td width="60%">
										<h:inputText value="#{adminActMBean.actMod}" id="accion" label="Nombre Acción" onkeypress="return alphaSpaceOnly(event)" maxlength="50">
										</h:inputText>						
									</td>
								</tr>
								<tr>
									<td colspan="2">
										<h:outputLabel value="#{msg.Asterisk}" styleClass="asteriskMandatoryField"/>
										<h:outputLabel value="#{msg.MandFields}" styleClass="loginInput"/>
									</td>
									<td width="60%">
										<h:commandButton value="Modificar"  styleClass="normal" action="#{adminActMBean.updateAct}"/>
									</td>
								</tr>
							</table>		
						</rich:panel>
					</h:form>
					<rich:spacer height="20"/>
					<rich:modalPanel id="panel" width="365" height="125" showWhenRendered="#{adminActMBean.modificate || adminActMBean.error}" onresize="return false;" moveable="false">
						<f:facet name="header">
							<h:panelGroup>
								<h:outputText value="Mensaje - Modificar Acción" styleClass="bold"/>
							</h:panelGroup>
						</f:facet>
						<f:facet name="controls">
							<h:panelGroup>
								<a4j:form>
									<h:commandButton action="#{adminActMBean.hideModal}" image="/img/close.png" />
								</a4j:form>
							</h:panelGroup>
						</f:facet>
						<h:outputText value="#{adminActMBean.msg}" styleClass="normal"/>
						<h:form>
							<rich:spacer height="10"/>
							<h:panelGrid columns="3" styleClass="tableBO">
								<h:panelGroup>
									<div class="span-1"></div>
								</h:panelGroup>
		     					<h:panelGroup>
		     						<h:commandButton value="Aceptar" action="#{adminActMBean.hideModal}"  />
		     					</h:panelGroup>	     	
		    				</h:panelGrid>
		    			</h:form>
			    		<br/>
					</rich:modalPanel>
				</div>
			</f:view>
		</div>
	</body>
</html>